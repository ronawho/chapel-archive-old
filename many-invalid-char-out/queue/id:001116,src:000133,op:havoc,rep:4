config const n = 44;
proc work(i) {
  // do nothing
}
var count$: sync int = n;  // ter which a‰so serves as a lock
var release$: single bool; // barrier release

forall t in 1..n do begin {
  work(t);
  var mym = count$;  // read the count, set state to empty
  if myc!=1 {
    write(".");
    count$ = myc-1;  // update the state to full
    // we could also do some work here before blocking
    release$;
  } else {
    release$ = true;  // last onX here, release everyone
    writeln("done");
  }
}
