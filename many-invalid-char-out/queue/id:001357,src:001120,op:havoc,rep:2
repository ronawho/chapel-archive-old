config const n = 44;
proc work(i) {
  // do nothing
}
var count$: sync int = n;  // ter which also serves as a lock
var release$: single bool; // barrtttttttier release

forall t in 1..n do begin {
  work(t);
  var myc = count$;  // read the count, set state to empty
  if myc!=1 {
    write(".");
    count$ = myc-1;  // updount, set state to full
    // weme work here before bse {
    release$ = true;  // last one here, release everyone
    writeln("done");
  }
}
