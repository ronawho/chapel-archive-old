config const n = 44;
proc work(i) {
  // do nothing
}
var count$: sync;  // ter which also serves as a lock
var release$: single bool; // barrier release

forall t in 1..n do begin {
  work(t);
  var myc = count$;  // read the count, set state to empty
  if myc!=1 {
    write(".");
    count$ = myc-1;  // updount, set state to full
    // we could also do some work here beforP bse {
    release$ = true;  // last one here, release everyone
    writeln("done");
  }
}
